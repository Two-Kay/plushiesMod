<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef Class="Plushies.ThingDef_Plushie" ParentName="BuildingBase" Name="PlushieBase">
    <thingClass>Building_Art</thingClass>
	
	<defName>Plushie</defName>
    <label>plushie</label>
    <description>A cute little plushie!</description>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/plushies</texPath>
    </graphicData>
    <fillPercent>0.35</fillPercent>
    <rotatable>false</rotatable>
    
    <costStuffCount>20</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
	
	
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <useHitPoints>true</useHitPoints>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsArt</li>
    </thingCategories>
    <thingSetMakerTags><li>RewardStandardLowFreq</li></thingSetMakerTags>
    <statBases>
      <Flammability>1.0</Flammability>
      <SellPriceFactor>1.10</SellPriceFactor>
      <MeditationFocusStrength>0.0</MeditationFocusStrength>
	  
	  <MaxHitPoints>90</MaxHitPoints>
      <Mass>2</Mass>
      <Beauty>20</Beauty>
      <WorkToMake>10000</WorkToMake>
	  
    </statBases>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtSculpture</nameMaker>
        <descriptionMaker>ArtDescription_Plushie</descriptionMaker>
        <canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
      </li>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Artistic</li>
        </focusTypes>
        <offsets>
          <li Class="FocusStrengthOffset_Quality">
            <curve>
              <points>
                <li>(0,0.12)</li> <!-- awful -->
                <li>(1,0.16)</li> <!-- poor -->
                <li>(2,0.20)</li> <!-- normal -->
                <li>(3,0.22)</li> <!-- good -->
                <li>(4,0.24)</li> <!-- excellent -->
                <li>(5,0.26)</li> <!-- masterwork -->
                <li>(6,0.28)</li> <!-- legendary -->
              </points>
            </curve>
          </li>
          <li Class="FocusStrengthOffset_BuildingDefsWithQuality">
            <defs>
              <li>Plushie</li>
            </defs>
            <radius>9.9</radius>
            <maxBuildings>8</maxBuildings>
            <focusPerQuality>
              <points>
                <li>(0,0.0)</li> <!-- awful -->
                <li>(1,0.0)</li> <!-- poor -->
                <li>(2,0.01)</li> <!-- normal -->
                <li>(3,0.01)</li> <!-- good -->
                <li>(4,0.01)</li> <!-- excellent -->
                <li>(5,0.02)</li> <!-- masterwork -->
                <li>(6,0.02)</li> <!-- legendary -->
              </points>
            </focusPerQuality>
            <explanationKey>MeditationFocusPerSculpture</explanationKey>
            <explanationKeyAbstract>MeditationFocusPerSculptureAbstract</explanationKeyAbstract>
          </li>
        </offsets>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_MeditationOffsetBuildingsNear</li>
    </placeWorkers>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <tradeTags>
      <li>Art</li>
    </tradeTags>
    <recipeMaker>
	<researchPrerequisite>ComplexClothing</researchPrerequisite>
	<recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	  <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <workSkill>Artistic</workSkill>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
  
  <ThoughtDef>
    <defName>PlushieCuddle</defName>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>cuddled plushie</label>
        <description>Such a comforting softness.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

    
  <ThoughtDef>
    <defName>PlushieCuddleKind</defName>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <requiredTraits>
      <li>Kind</li>
    </requiredTraits>
    <stages>
      <li>
        <label>cuddled the cutest plushie</label>
        <description>What a fluffy and wholesome sleep!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  </Defs>